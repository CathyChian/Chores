<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RoommatesFragment">

    <EditText
        android:id="@+id/etRoommates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Roommates"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnRoommates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etRoommates"
        android:layout_alignParentEnd="true"
        android:text="Add Roommates" />

    <TextView
        android:id="@+id/tvRoommates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRoommates"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        tools:text="Roommates: billy" />

</RelativeLayout>